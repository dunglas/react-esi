{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    /* Type Checking */
    "strict": true,

    /* Modules */
    "moduleResolution": "Node10",
    "module": "CommonJS",
    "rootDir": "./src/",

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib/",

    /* Interop Constraints */
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,

    /* Language and Environment */
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "target": "ES6"
  },
  "include": ["./src/"]
}
