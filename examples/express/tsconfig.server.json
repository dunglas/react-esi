{
  "compilerOptions": {
    /* Type Checking */
    "strict": true,

    /* Modules */
    "rootDir": "./src/",
    "moduleResolution": "Node10",
    "module": "CommonJS",
    "types": ["node"],

    /* Emit */
    "sourceMap": true,
    "outDir": "./dist/",

    /* Language and Environment */
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "target": "ES5",

    /* Interop Constraints */
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/server.tsx"]
}
